@model Wareh.ViewModels.ItemViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4>Item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Item.WarehouseId, "Warehouse", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Item.WarehouseId, new SelectList(Model.Warehouses, "id", "Name"), "Select Warehouse...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Item.WarehouseId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item.Location, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Item.Location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Item.Location, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-10">
            <h4>For Purchase Order</h4>
            <hr>
        </div>

        <div class="col-lg-10">
            <label for="Product_name" class="col-md-2">Product:</label>
            <span id="Product_name">@Model.PurchaseOrder.Product.Name</span>
        </div>

        <div class="col-lg-10">
            <label for="Product_name" class="col-md-2">Quantity:</label>
            <span id="Product_name">@Model.PurchaseOrder.Quantity</span>
        </div>

        <div class="col-lg-10">
            <label for="Product_name" class="col-md-2">Measure Unit:</label>
            <span id="Product_name">@Model.PurchaseOrder.MeasureUnit</span>
        </div>

        <div class="col-lg-10">
            <label for="Product_name" class="col-md-2">Supplier:</label>
            <span id="Product_name">@Model.PurchaseOrder.Supplier.Name</span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
