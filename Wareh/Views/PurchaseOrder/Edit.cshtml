@model Wareh.ViewModels.PurchaseOrderViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PurchaseOrder</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2"></div>
            <h3 class="col-md-4">@Model.PurchaseOrder.Product.Name</h3>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PurchaseOrder.SupplierId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("ManufacturerId", new SelectList(Model.Manufacturers, "Id", "Name"), "Select Manufacturer...", htmlAttributes: new { @class = "form-control" })*@
                @Html.DropDownListFor(model => model.PurchaseOrder.SupplierId, new SelectList(Model.Suppliers, "Id", "Name"), "Select Suppliers...", htmlAttributes: new { @class = "form-control" })

                @Html.ValidationMessageFor(model => model.PurchaseOrder.SupplierId, "", new { @class = "text-danger" })
            </div>

        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.PurchaseOrder.MeasureUnit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchaseOrder.MeasureUnit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PurchaseOrder.MeasureUnit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PurchaseOrder.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchaseOrder.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PurchaseOrder.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/@ViewContext.RouteData.GetRequiredString("controller")/Index" class="btn btn-default">
        <span class="glyphicon glyphicon-arrow-left"></span>
        Back to List
    </a>
</div>